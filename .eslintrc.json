{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [
      {
        "files": ["*.js"],
        "rules": {
          "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "always"
            }
          ]
        }
      }
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": ["error", { "allow": ["warn", "error", "log"] }],
      "linebreak-style": 0
    }
  }
  
